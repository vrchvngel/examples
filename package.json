      "prettier --write"
    ]
  },
  "devDependencies": {
    "eslint": "latest",
    "eslint-config-next": "canary",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "plop": "^3.1.2",
    "prettier": "^2.8.7",
    "typescript": "^4.9.5"
  }
}
