{
  "name": "examples",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint-staged": "lint-staged",
    "new-example": "plop example",
    "prepare": "husky install",
    "prettier": "prettier --write ."
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "!(**/.vercel/**/*)**/*.{ts,tsx}": [
